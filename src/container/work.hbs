{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data='Work history' big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>

                        <br>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (зараз працюю)
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{>link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            {{company.name}}
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            <b>Projects ({{projectAmount}})</b>
                        </div>

                        <br>
                        <br>

                        <div>
                            <ul>
                                {{#each projects}}
                                <li>
                                    <div>{{>link text=name href=url blank=true noLine=true}}</div>

                                    <br>

                                    <div>
                                        <p>
                                            {{about}}
                                        </p>
                                    </div>

                                    <br>

                                    <div>
                                        <em>Project stacks</em>
                                        ({{stackAmount}})
                                    </div>

                                    <br>

                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>

                                    <br>

                                    <div>
                                        <em>Project awards</em>
                                    </div>

                                    <br>

                                    <ul>
                                        {{#each awards}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>

                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    <br>
                    {{/each}}

                </ul>
            </div>
        </section>
        {{/with}}
</div>

